{% extends "layout/base.twig" %}

{% from "macros.twig" import markdown_path, class_item, class_item, class_name, class_type, member_signature %}

{% block title %}
{% set title = "Index" %}
{{ parent() }}
{% endblock %}

{% block content %}
## Letters
{% for letter in 'A'..'Z' %}
{% if items[letter] is defined and items[letter]|length > 1 %}
 * [{{ letter }}](#{{ letter|lower }})
{% endif %}
{% endfor %}


{% for letter, elements in items %}

## {{ letter }}

{% for element in elements %}
{%- set type = element[0] %}
{%set value = element[1] %}
{% if 'class' == type %}
- {{ class_name(value, true) }}{% if has_namespaces %} &mdash; _Class in namespace_ [`{{ value.namespace }}`]({{ namespace_path(value.namespace)|replace({".html": ""}) }})
{% endif %}
{% elseif 'method' == type %}
- [`{{ value.name }}()`]({{ markdown_path(class_path(value.class)) }}#{{ value.name }}) &mdash; _Method in class_ {{ class_name(value.class, true) }}
{% elseif 'property' == type %}
- [`${{ value.name }}()`]({{ markdown_path(class_path(value.class)) }}#${{ value.name }}) &mdash; _Property in class_ {{ class_name(value.class, true) }}
{% endif %}
{% endfor %}
{% endfor %}
{% endblock %}
